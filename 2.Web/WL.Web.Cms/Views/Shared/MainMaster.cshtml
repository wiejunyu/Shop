        <!-- END TOP NAVIGATION BAR -->
    </div>
    <!-- END HEADER -->
    <div class="clearfix">
    </div>
    <!-- BEGIN CONTAINER -->
    <div class="page-container">
        <!-- BEGIN SIDEBAR -->
        <div class="page-sidebar-wrapper">
            <div class="page-sidebar navbar-collapse collapse">
                <!-- BEGIN SIDEBAR MENU -->
                <ul class="page-sidebar-menu" id="page-menu">
                    <li class="sidebar-toggler-wrapper">
                        <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
                        <div class="sidebar-toggler hidden-phone">
                        </div>
                        <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
                    </li>
                    <li class="sidebar-search-wrapper">
                        <!-- BEGIN RESPONSIVE QUICK SEARCH FORM -->
                        <div class="clearfix">
                            <br />
                        </div>
                        <!-- END RESPONSIVE QUICK SEARCH FORM -->
                    </li>
                    @{
                        List<Menu> d = ViewData["Menulist"] as List<Menu>;
                        List<Menu> btn = ViewData["Btnlist"] as List<Menu>;
                    }
                    @foreach (Menu temp in ViewData["Toplist"] as List<Menu>)
                    {
                        var action = "";

                        List<Menu> last = d.Where(u => u.Pid == temp.ID).ToList();
                        var islook = 0;
                        foreach (Menu m in last)
                        {
                            islook += btn.Count(u => u.Action == "Look" && u.Pid == m.ID);

                            action += m.Action + " ";
                        }
                        if (islook == 0) { continue; }
                        <li class="@action">
                            <a href="javascript:void(0);">
                                <i class="@temp.Icon"></i>
                                <span class="title">@temp.Name</span>
                            </a>
                            <ul class="sub-menu">
                                @foreach (Menu m in last)
                                {
                                    if (m.Pid == temp.ID)
                                    {
                                        var b = btn.SingleOrDefault(u => u.Action == "Look" && u.Pid == m.ID);
                                        if (b != null)
                                        {
                                            <li id="@m.Action">
                                                <a href="@m.Url">@m.Name</a>
                                            </li>
                                        }
                                    }
                                }
                            </ul>
                        </li>
                    }

                </ul>
                <!-- END SIDEBAR MENU -->
            </div>
        </div>
        <!-- END SIDEBAR -->
        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
            <div class="page-content">
                <div class="page-content-body">
                    @RenderBody()
                </div>
            </div>
        </div>

        <!-- END CONTENT -->
        <!-- BEGIN FOOTER -->
        <div class="footer">

        </div>
        <!-- END FOOTER -->
    </div>
    <!-- END CONTAINER -->
    <!-- BEGIN FOOTER -->
</body>
