<script>
    $(function () {
        @{
            string langStr = ViewData["lang"].ToString();
        }
        var lang = 0;
        switch(@langStr)
        {
            case 1:
                lang = 0;
                break;
            case 2:
                lang = 2;
                break;
            case 3:
                lang = 1;
                break;
            case 6:
                lang = 3;
                break;
            default:
                break;
        }
        $("#title").blur(function(){
            $.ajax({
                type: "post", //要用post方式
                data: "{'title':'" + $("#title").val() + "'}",
                url: "/Article/GetArticleExistence",//方法所在页面和方法名
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    if (data == 0) {
                        $("#title_span").html("文章已存在");
                    }
                    else{
                        $("#title_span").html("文章可添加");
                    }
                }
            });
        });
        $(".p-nav-right li button").eq(lang).removeClass("red");
        $(".p-nav-right li button").eq(lang).addClass("green");

        //中文语按钮
        $("#LangChinese").click(function () {
            _hide();
            $.ajax({
                type: "post", //要用post方式
                data: "{'langInt':'1'}",
                url: "/Article/ArticleManagementLangFather",//方法所在页面和方法名
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    if (data == 1) {
                        window.location.reload();
                    }
                },
                error: function (err) {
                    alert(err);
                }
            });
        });

        //粤语按钮
        $("#LangTraditional").click(function () {
            _hide();
            $.ajax({
                type: "post", //要用post方式
                data: "{'langInt':'3'}",
                url: "/Article/ArticleManagementLangFather",//方法所在页面和方法名
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    if (data == 1) {
                        window.location.reload();
                    }
                },
                error: function (err) {
                    alert(err);
                }
            });

        });

        //英文语按钮
        $("#LangEnglish").click(function () {
            _hide();
            $.ajax({
                type: "post", //要用post方式
                data: "{'langInt':'2'}",
                url: "/Article/ArticleManagementLangFather",//方法所在页面和方法名
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    if (data == 1) {
                        window.location.reload();
                    }
                },
                error: function (err) {
                    alert(err);
                }
            });
        });

        //越南语按钮
        $("#LangVietnam").click(function () {
            _hide();
            $.ajax({
                type: "post", //要用post方式
                data: "{'langInt':'6'}",
                url: "/Article/ArticleManagementLangFather",//方法所在页面和方法名
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    if (data == 1) {
                        window.location.reload();
                    }
                },
                error: function (err) {
                    alert(err);
                }
            });
        });
    });
    var ue1 = UE.getEditor('content');
    function AddArticle() {
        _hide();
        var options = {
            url: "/Article/SetArticle",
            success: function (data) {
                if (data == "1")//返回的数据用data.d获取内容
                {
                    $("#myModal2 .modal-body p").html("成功添加文章");
                    $("#msg1").trigger('click');
                }
                else {
                    $("#myModal1 .modal-body p").html("添加文章失败");
                    $("#msg").trigger('click');
                }
            }
        };
        if ($("#title").val() != '') {
            $("#info2").ajaxSubmit(options);
        }
        else {
            $("#myModal1 .modal-body p").html("栏目名称不能为空");
            $("#msg").trigger('click');
        }

    };
    function _show() {
        $("#loading1").hide();
        $("#chart_1").hide();
        $("form").show();
    };
    function _hide() {
        $("#loading1").show();
        $("#chart_1").show();
        $("form").hide();
    };
</script>
