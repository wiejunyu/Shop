    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form class="login-form" method="post">
            <h3 class="form-title">Login to your account</h3>
            <div class="alert alert-danger display-hide" id="alert-danger">
                <button class="close" data-close="alert"></button>
                <span>
                    请输入您的账号和密码
                </span>
            </div>
            <div class="alert alert-danger display-hide" id="erroShow">
                <button class="close" data-close="alert"></button>
                <span>
                    账号密码不正确，请重新输入
                </span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Username</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username" id="username" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" id="password" />
                </div>
            </div>
            <script>


            </script>
            <div class="form-actions">
                <label class="checkbox">
                    <input type="checkbox" name="remember" id="remember" value="0" /> 7天内自动登录
                </label>
                <button type="submit" class="btn blue pull-right" id="login" data-complete-text="登陆成功" data-loading-text="正在登陆...">
                    登录 <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>
        </form>
    </div>
