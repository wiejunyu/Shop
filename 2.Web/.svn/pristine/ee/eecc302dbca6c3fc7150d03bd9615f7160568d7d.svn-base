
@{
    ViewBag.Title = "CMS || 栏目管理-添加栏目";
    Layout = "~/Views/Shared/MainMaster.cshtml";
}
@using JH.Cms.Models
<link rel="stylesheet" type="text/css" href="~/Scripts/assets/plugins/bootstrap-fileupload/bootstrap-fileupload.css">
<script type="text/javascript" src="~/Scripts/assets/plugins/bootstrap-fileupload/bootstrap-fileupload.js"></script>
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="/Home/Index">首页</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li><a href="/Column/ColumuManagement">栏目管理</a><i class="fa fa-angle-right"></i></li>
            <li class="active">添加栏目</li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<div class="p-nav-top">
    <ul class="p-nav-right">
        <li><button type="button" class="btn red" id="LangChinese">中文</button></li>
        <li><button type="button" class="btn red" id="LangTraditional">繁体</button></li>
        <li><button type="button" class="btn red" id="LangEnglish">英文</button></li>
        <li><button type="button" class="btn red" id="LangVietnam">越南语</button></li>
    </ul>
</div>
<div class="portlet box green ">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-reorder"></i> 添加栏目
        </div>
        <div class="tools">
            <a href="" class="collapse"></a>
            <a href="#portlet-config" data-toggle="modal" class="config"></a>
            <a href="" class="reload"></a>
            <a href="" class="remove"></a>
        </div>
    </div>
    <div class="portlet-body form" >
        <form class="form-horizontal" method="post" novalidate="novalidate" enctype="multipart/form-data" id="info">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">上级栏目</label>
                    <div class="col-md-9">
                        <select class="form-control" id="parentid" name="parentid">
                            <option value="0">作为一级栏目</option>
                            @foreach (Columu temp in ViewData["Categorylist"] as List<Columu>)
                            {
                                <option value="@temp.ID">@temp.catname</option>
                            }
                        </select>
                    </div>

                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">请选择模型</label>
                    <div class="col-md-9">
                        <select class="form-control" id="moduleid" name="moduleid">
                            <option value="1">单页模型</option>
                            <option value="2">文章模型</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">栏目名称</label>
                    <div class="col-md-9">
                        <div class="input-icon right">
                            <i class="fa fa-pencil"></i>
                            <input type="text" class="form-control" placeholder="栏目名称" name="catname" id="catname">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">栏目目录</label>
                    <div class="col-md-9">
                        <div class="input-icon right">
                            <i class="fa fa-pencil"></i>
                            <input type="text" class="form-control" placeholder="栏目目录" name="catdir" id="catdir">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">SEO栏目标题</label>
                    <div class="col-md-9">
                        <div class="input-icon right">
                            <i class="fa fa-pencil"></i>
                            <input type="text" class="form-control" placeholder="SEO栏目标题" name="title" id="title">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">SEO栏目关键词</label>
                    <div class="col-md-9">
                        <div class="input-icon right">
                            <i class="fa fa-pencil"></i>
                            <input type="text" class="form-control" placeholder="SEO栏目关键词" name="keywords" id="keywords">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">SEO栏目描述</label>
                    <div class="col-md-9">
                        <textarea class="form-control" rows="3" placeholder="SEO栏目描述" name="description" id="description"></textarea>
                    </div>
                </div>

                <div class="form-group" id="id_positivefrom">
                    <label class="col-md-3 control-label">
                         缩略图
                    </label>
                    <div class="col-md-9">
                        <div class="fileupload fileupload-new" data-provides="fileupload">
                            <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                                <img src="~/Scripts/assets/img/noImage.png" alt="NotImage" id="img"/>
                            </div>
                            <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;">
                            </div>
                            <div>
                                <span class="btn default btn-file">
                                    <span class="fileupload-new">
                                        <i class="fa fa-paper-clip"></i> 略缩图
                                    </span>
                                    <span class="fileupload-exists">
                                        <i class="fa fa-undo"></i> 更改
                                    </span>
                                    <input type="file" class="default" id="id_positive" name="id_positive"/>
                                </span>
                                <a href="#" class="btn red fileupload-exists" data-dismiss="fileupload"><i class="fa fa-trash-o"></i> 删除</a>
                            </div>
                        </div>
                        <input type="hidden" id="id_positive_url" name="imgae" value="" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">点击次数</label>
                    <div class="col-md-9">
                        <div class="input-icon right">
                            <i class="fa fa-hand-o-up" style="float: none;left: 90px;"></i>
                            <input type="text" class="form-control input-small" name="hits" id="hits">
                        </div>
                    </div>
                </div>
                <div class="form-actions fluid">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="button" class="btn green" onclick="setColumu()">提交</button>
                        <button type="button" class="btn default">重置</button>
                    </div>
                </div>
            </div>
        </form>
        <div class="portlet-body">
            <div style="text-align: center; display: none;padding:150px 0px;" id="loading1" class="display-none">
                <div style="margin:0 auto">
                    <img title="progressBar_m" style="BORDER-TOP-WIDTH: 0px; PADDING-RIGHT: 0px; DISPLAY: inline; PADDING-LEFT: 0px; BORDER-LEFT-WIDTH: 0px; BACKGROUND-IMAGE: none; BORDER-BOTTOM-WIDTH: 0px; PADDING-TOP: 0px; BORDER-RIGHT-WIDTH: 0px" height="25" alt="progressBar_m" src="/Scripts/js/loading.gif" width="25" border="0">
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function getQueryString(name) {
        var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
        var r = window.location.search.substr(1).match(reg);
        if (r != null) return unescape(r[2]);
        return null;
    }
    $(function () {
        @{
            string langStr = ViewData["lang"].ToString();
        }
        var lang = 0;
        switch(@langStr)
        {
            case 1:
                lang = 0;
                break;
            case 2:
                lang = 2;
                break;
            case 3:
                lang = 1;
                break;
            case 6:
                lang = 3;
                break;
            default:
                break;
        }
        $(".p-nav-right li button").eq(lang).removeClass("red");
        $(".p-nav-right li button").eq(lang).addClass("green");
        //栏目默认选中
        var id = getQueryString('id');

        if(id == null)
        {
            $('#parentid').prop('selectedIndex', 0);
        }
        else
        {
            $('#parentid').find("option[value = '" + id + "']").attr("selected", "selected");
        }
        $('#moduleid').prop('selectedIndex', 0);
        $("#NoLink").click(function () {
            $("#moduleid").prop('selectedIndex', 0);
        });

        //中文语按钮
        $("#LangChinese").click(function () {
            _hide();
            $("#parentid").html('');
            $.ajax({
                type: "post", //要用post方式
                data: "{'langInt':'1'}",
                url: "/Column/ColumuAddLang",//方法所在页面和方法名
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    if (data != null) {
                        var json = data;
                        $("#parentid").append('<option value="0">作为一级栏目</option>');
                        for (var i = 0; i < json.length; i++) {
                            $("#parentid").append('<option value="' + json[i]['ID'] + '">' + json[i]['catname'] + '</option>');
                        }
                        $(".p-nav-right li button").removeClass("green");
                        $(".p-nav-right li button").addClass("red");
                        $(".p-nav-right li button").eq(0).addClass("green");
                        _show();
                        _default();
                    }
                },
                error: function (err) {
                    alert(err);
                }
            });
        });

        //粤语按钮
        $("#LangTraditional").click(function () {
            _hide();
            $("#parentid").html('');
            $.ajax({
                type: "post", //要用post方式
                data: "{'langInt':'3'}",
                url: "/Column/ColumuAddLang",//方法所在页面和方法名
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    if (data != null) {
                        var json = data;
                        $("#parentid").append('<option value="0">作为一级栏目</option>');
                        for (var i = 0; i < json.length; i++) {
                            $("#parentid").append('<option value="' + json[i]['ID'] + '">' + json[i]['catname'] + '</option>');
                        }
                        $(".p-nav-right li button").removeClass("green");
                        $(".p-nav-right li button").addClass("red");
                        $(".p-nav-right li button").eq(1).addClass("green");
                        _show();
                        _default();
                    }
                },
                error: function (err) {
                    alert(err);
                }
            });
        });

        //英文语按钮
        $("#LangEnglish").click(function () {
            _hide();
            $("#parentid").html('');
            $.ajax({
                type: "post", //要用post方式
                data: "{'langInt':'2'}",
                url: "/Column/ColumuAddLang",//方法所在页面和方法名
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    if (data != null) {
                        var json = data;
                        $("#parentid").append('<option value="0">作为一级栏目</option>');
                        for (var i = 0; i < json.length; i++) {
                            $("#parentid").append('<option value="' + json[i]['ID'] + '">' + json[i]['catname'] + '</option>');
                        }
                        $(".p-nav-right li button").removeClass("green");
                        $(".p-nav-right li button").addClass("red");
                        $(".p-nav-right li button").eq(2).addClass("green");
                        _show();
                        _default();
                    }
                },
                error: function (err) {
                    alert(err);
                }
            });
        });

        //越南语按钮
        $("#LangVietnam").click(function () {
            _hide();
            $("#parentid").html('');
            $.ajax({
                type: "post", //要用post方式
                data: "{'langInt':'6'}",
                url: "/Column/ColumuAddLang",//方法所在页面和方法名
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    if (data != null) {
                        var json = data;
                        $("#parentid").append('<option value="0">作为一级栏目</option>');
                        for (var i = 0; i < json.length; i++) {
                            $("#parentid").append('<option value="' + json[i]['ID'] + '">' + json[i]['catname'] + '</option>');
                        }
                        $(".p-nav-right li button").removeClass("green");
                        $(".p-nav-right li button").addClass("red");
                        $(".p-nav-right li button").eq(3).addClass("green");
                        _show();
                        _default();
                    }
                },
                error: function (err) {
                    alert(err);
                }
            });
        });
    });


    var options = {
        url: "/Column/SetColumu",
        success: function (data) {
            if (data == "1")//返回的数据用data.d获取内容
            {
                $("#myModal1 .modal-body p").html("成功添加栏目");
                $("#msg").trigger('click');
            }
            else {
                $("#myModal1 .modal-body p").html("添加栏目失败");
                $("#msg").trigger('click');
            }
        }
    };
    //添加栏目
    function setColumu() {
        if ($("#catname").val() != '') {
            if ($("#catdir").val() != '') {
                if ($("#hits").val() == '') {
                    $("#hits").val(0);
                }
                _hide();
                $("#info").ajaxSubmit(options);
            }
            else {
                $("#myModal1 .modal-body p").html("栏目目录不能为空");
                $("#msg").trigger('click');
            }
        }
        else {
            $("#myModal1 .modal-body p").html("栏目名称不能为空");
            $("#msg").trigger('click');
        }
    };
    function _show() {
        $("#loading1").hide();
        $("#chart_1").hide();
        $("form").show();
    };
    function _hide() {
        $("#loading1").show();
        $("#chart_1").show();
        $("form").hide();
    };
    function _default() {
        $('#parentid').prop('selectedIndex', 0);
        $('#moduleid').prop('selectedIndex', 0);
    };
</script>
<div class="modal-backdrop fade in" style="display:none"></div>

<a href="#myModal1" role="button" class="btn red" data-toggle="modal" style="display:none" id="msg">Alert</a>
<div id="myModal1" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2" aria-hidden="false" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">提示</h4>
            </div>
            <div class="modal-body">
                <p>
                    成功添加栏目
                </p>
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn green" onclick="_show();">确认</button>
            </div>
        </div>
    </div>
</div>