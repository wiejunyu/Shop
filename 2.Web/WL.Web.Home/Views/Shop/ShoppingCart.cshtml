                            <a href="javascript:void 0;" class="update" data-act="settingAddress" onclick="AddressShow();">设置</a>
                        }
                        else
                        {
                            if (state == 0)
                            {
                                state++;
                                address = "请设置收货地址";
                                <span class="default" data-container="defaultAddress" id="AddressAll">未设置收货地址或默认地址</span>
                                <a href="javascript:void 0;" class="update" data-act="settingAddress" onclick="AddressShow();">设置</a>
                            }
                        }
                    }
                }
                else
                {
                    address = "请设置收货地址";
