        });
        $("#EditAddress").submit(function () {
            _show();
            var url = $(this).attr('action');
            var data = $(this).serialize();

            var data_arr = $(this).serializeArray();

            if (data_arr[0].value == "") {
                _hide();
                message(true, "省、自治区不能为空", "");
                return false;
            }
            if (data_arr[1].value == "") {
                _hide();
                message(true, "城市不能为空", "");
                return false;
            }
            if (data_arr[2].value == "") {
                _hide();
                message(true, "县区不能为空", "");
                return false;
            }
            if (data_arr[3].value == "") {
                _hide();
                message(true, "详细地址不能为空", "");
                return false;
            }
            if (data_arr[4].value == "") {
                _hide();
                message(true, "名称不能为空", "");
                return false;
            }
            var tel = data_arr[5].value;
            if (tel == "") {
                _hide();
                message(true, "电话不能为空", "");
                return false;
            }
            else if (tel.search(/^(((13[0-9]{1})|(15[0-9]{1}))+\d{8})$/) == -1) {
                _hide();
                message(true, "手机号码格式错误", "");
                return false;
            }
            if (@Address.Count >= 5) {
                _hide();
                message(true, "最多只能添加五个收货地址", "");
                return false;
            }
            var jsondata = undefined;
            jsondata = $("#EditAddress").serializeObject();
            jsondata = { json: JSON.stringify(jsondata) };
            $.ajax({
                type: "POST",
                async: true,
                dataType: 'json',
                url: url,
                data: jsondata,
                success: function (data) {
                    if (data == '1') {
                        _hide();
                        message(true, "收货地址添加成功", " ");
                    }
                    else {
                        _hide();
                        message(true, "收货地址添加失败", "");
                    }
                }
            });
            return false;
        });
    });
