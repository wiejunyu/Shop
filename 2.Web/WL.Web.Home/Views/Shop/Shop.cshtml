@{
    ViewBag.Title = "商品采购";
    ViewBag.Description = "【跨境物流链】专注越南专线,泰国专线,老挝专线柬埔寨专线,工业品采购,五金采购,跨境国际陆运,越南工业品采购越南跨境购,路运,送货到门,包清关,货到付款等增值服务";
    ViewBag.Keywords = "越南专线-泰国专线-老挝专线-柬埔寨专线-工业品采购-五金采购-跨境国际陆运-越南工业品采购-越南跨境购";
    Layout = "~/Views/Shared/ShopMaster.cshtml";
}
@using WL.Home.Models
@{
    List<CategoryModels> list = ViewData["category"] as List<CategoryModels>;
    list = list.Where(p => p.Recommend == true).ToList();
    List<CategoryModels> list3 = list.Where(p => p.Rank == 3).ToList();
    List<CategoryModels> list4 = list.Where(p => p.Rank == 4).ToList();
    list4 = list4.Take(8).ToList();
    List<ShopModels> shop = ViewData["HotShop"] as List<ShopModels>;
    shop = shop.Take(6).ToList();
}
<section class="index_tgb">
    <div>
        <div class="floor-goods-left" style="background-color: #f66d6e">
            <div class="floor-goods-left-title">
                <a id="menuLeft">推荐商品</a>
            </div>
            <div class="floor-goods-left-cate">
                @foreach (CategoryModels temp in list3)
                {
                    <a href="/shop/list.html?id=@temp.id">@temp.Name</a>
                }
            </div>
            <img class="floor-goods-left-img" attr-json="{adverId: 277,type: 6}" src="/Image/cat/d9ffedced05242afbcf16cf40937049b.jpg">
        </div>
        <div class="floor-goods-right" style="border-top:2px solid  #f66d6e">
            <div class="floor-goods-right-goods">
                <ul>
                    @if (shop.Count == 0)
                    {
                        <li>
                            <div class="floor-goods-right-goods-img">
                                <img src="~/Image/NotShop.jpg" data-lazy="~/Image/NotShop.jpg" style="display: inline-block;">
                            </div>
                            <span class="fgrg-title">该栏目暂无商品</span>
                            <span class="fgrg-price"><font>¥0.00</font></span>
                        </li>
                    }
                    @foreach (ShopModels temp in shop)
                    {
                        <li>
                            <a href="/shop/product.html?id=@temp.id" target="_blank">
                                <div class="floor-goods-right-goods-img">
                                    <img src="@temp.Image" data-lazy="@temp.Image" style="display: inline-block;">
                                </div>
                                <span class="fgrg-title">@temp.Name@temp.Model</span>
                                <span class="fgrg-price"><font>¥@temp.Trueprice</font></span>
                            </a>
                        </li>
                    }
                </ul>
            </div>
            <div class="floor-goods-right-brand J_switchBrand11">
                <ul class="floor-goods-right-brand-top">
                    <li>
                        @foreach (CategoryModels temp in list4)
                        {
                            <a href="@temp.Url">
                                <img src="@temp.Picture">
                            </a>
                        }
                    </li>
                </ul>
                <a href="http://www.vipmro.com/search/?keyword=%25E6%25AC%25A7%25E5%25A7%2586%25E9%25BE%2599">
                    <img src="https://image.vipmro.net//adver/17bdc8b1a8a94d0dad1ec9cef8f0e993.jpg" class="right-ts-img">
                </a>
            </div>
        </div>
        <!-- if (homeFloorAdvers.length > 0 && homeFloorAdvers[0].bottomStatus == 1) (广告) -->
        <!-- if( homeFloorAdvers[0].bottomUrl ) -->
        <div class="clearfix"></div>
    </div>
</section>

